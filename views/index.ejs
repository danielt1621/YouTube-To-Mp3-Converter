    <div id="footer">
        

        <div id="footer-links">
            <a id="contact" class="footer-link">Contact</a>
            <a href="#" class="footer-link">Privacy Policy</a>
            <a href="#" class="footer-link">Terms Of Use</a>
        </div>


    </div>

    <!--Contact popup-->
    <div id="contact-div" class="contact-div">
            <button type="button" id="close-button">X</button>
      </div>
    
