    <div id="copywrite-statement">&copy: 2024 YouTube To Mp3 Converter and D.T. All Rights Reserved.</div>

    
    
    <script>
    //dark mode    
        function dark_mode() {
            var element = document.body;
            var topContainer = document.getElementsByClassName("top-container")[0]; // access the first (and only) elemnt within the top-container class
            element.classList.toggle("dark-mode");    
            var modeText = document.getElementById("mode-text");
            if (element.classList.contains("dark-mode")) { 
                topContainer.style.backgroundImage = "linear-gradient(326deg, #181818 0%, #91221e 74%)";
                modeText.textContent = "Dark";
                localStorage.setItem("darkMode", "true"); // store the dark mode preference in local storage
            } else {
                topContainer.style.backgroundImage = null; //make it return to it's original color
                modeText.textContent = "Light";
                localStorage.setItem("darkMode", "false"); // store the light mode preference in local storage
            }
        }

        // check the local storage value and set the initial dark mode state
        if (localStorage.getItem("darkMode") === "true") {
        dark_mode();
        }

        //Script for FAQ answers
        function toggleAnswer(faqId){
            var answer = document.getElementById(faqId + '-answer');
            var symbol = document.getElementById('expand-symbol-' + faqId);
            var question = document.getElementById(faqId);
                question.classList.toggle('active');

            if (answer.style.display === 'block'){
                answer.style.display = 'none';
                symbol.innerText = '+';
            } else{
                answer.style.display = 'block';
                symbol.innerText = '-';
            }
        }

        //contact
        document.getElementById("contact").addEventListener("click", function() {
        document.getElementById("contact-div").style.display = "flex";
        });

        document.getElementById("close-button").addEventListener("click", function() {
        document.getElementById("contact-div").style.display = "none";
        });
    
    </script>

</body>
</html>